<div class="bg-white p-6 rounded-lg shadow-lg max-w-md mx-auto mt-10">
  <!-- Section Title -->
  <h3 class="text-xl font-bold text-gray-800 mb-6">ðŸ‘¥ Suggested for You</h3>

  <!-- Suggestions List -->
  <ul class="space-y-4">
    <% suggestions.forEach(function(suggestion) { %>
    <li
      class="flex items-center justify-between bg-gray-50 p-3 rounded-lg shadow-sm"
    >
      <!-- User Info -->
      <div class="flex items-center">
        <img
          src="<%= suggestion.picture %>"
          alt="<%= suggestion.username %>"
          class="w-10 h-10 rounded-full mr-4 border-2 border-blue-500"
        />
        <span class="font-medium text-gray-700"
          ><%= suggestion.username %></span
        >
      </div>

      <!-- Add Friend Button -->

      <button
        type="submit"
        class="friend-btn h-10 w-10 flex items-center justify-center bg-gray-200 rounded-full hover:bg-blue-600 hover:text-white transition-colors duration-200<%= suggestion.friendRequests.includes(user.id)?' hidden':'' %>"
        title="Add Friend"
        onclick="handleSendFriendReq('<%= suggestion.id %>')"
        id="add-friend-btn-<%= suggestion.id %>"
      >
        <img src="/images/add-user.png" alt="Add Friend" class="h-6 w-6" />
      </button>
      <span
        id="add-friend-btn-sent-<%= suggestion.id %>"
        class="text-sm italic text-gray-400<%=suggestion.friendRequests.includes(user.id)?'':' hidden' %>"
        >Request sent</span
      >
    </li>
    <% }) %>
  </ul>
</div>

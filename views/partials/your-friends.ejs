<div
  class="bg-white px-6 pt-6 pb-6 shadow-xl ring-1 ring-gray-900/5 sm:max-w-sm sm:rounded-lg sm:px-10 ml-4"
>
  <div class="max-w-md mx-auto">
    <div class="items-center">
      <h2 class="text-xl font-bold mb-2">
        Your Friends (<%= friends.length %>)
      </h2>
      <ul>
        <% if (friends.length > 0) { %> <% friends.forEach(friend => { %>
        <li
          class="mt-2 text-gray-700 flex justify-between items-center"
          id="ur-friend-<%=friend.id%>"
        >
          <span><%= friend.username %></span>
          <% if (showFriendMenu) { %>
          <div>
            <button
              id="dropdownButton-<%= friend.id %>"
              class="text-gray-500 hover:text-gray-700 focus:outline-none"
              onclick="toggleDropDownMenu('<%= friend.id %>')"
            >
              <i class="fas fa-ellipsis-v"></i>
            </button>
            <div
              id="dropdownMenu-<%= friend.id %>"
              class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-lg shadow-lg hidden z-10"
            >
              <a
                href="/profile/<%= friend.username %>"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-100"
                >Show Profile</a
              >
              <a
                href="/chats/<%= friend.username %>"
                class="block px-4 py-2 text-gray-800 hover:bg-gray-100"
                >Chat</a
              >
              <button
                type="submit"
                class="w-full text-left px-4 py-2 text-gray-800 hover:bg-gray-100"
                onclick="handleRemoveFriend('<%= friend.id %>')"
              >
                Remove Friend
              </button>
            </div>
          </div>
          <%}%>
        </li>
        <% }) %> <% } else { %>
        <li class="text-gray-600">No friends yet</li>
        <% } %>
      </ul>
    </div>
  </div>
</div>

<div class="comment mb-3 p-2 bg-gray-50 rounded-lg cmts-<%=comment._id%>">
  <p><%= comment.comments %></p>
  <div class="flex justify-between items-center">
    <div>
      <button
        type="button"
        class="text-gray-500 post-cmt-lu-<%=comment._id%>"
        onclick="handleCommentLikeSubmit(this, '<%=comment._id%>')"
      >
        <i
          class="<%= (comment.likes || []).length? 'fa-solid':'fa-regular' %> fa-heart <%= (comment.likes && comment.likes.includes(user.id))? 'text-red-500':''%>"
        ></i>
        Likes(<span class="like-count"><%= (comment.likes || []).length %></span
        >)
      </button>
    </div>
    <span class="text-gray-400 text-xs">
      Commented By: <% if(comment.commentedBy.id === user.id) {%>
      <a href="/me">you</a>
      <% }else {%>
      <a href="/profile/<%= comment.commentedBy.username %>"
        ><%= comment.commentedBy.username %></a
      >
      <%}%>
    </span>
  </div>
</div>
